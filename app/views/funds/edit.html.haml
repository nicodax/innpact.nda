- content_for :breadcrumbs do
  %nav{"aria-label" => t("breadcrumbs.you_are_here"), :role => "navigation"}
    %ul.breadcrumbs
      %li
        %a{:href => root_path} Welcome
      %li
        %a{:href => root_path} Funds
      %li
        %span.show-for-sr t("current")
        Edit fund
.grid-x.grid-padding-x
  .cell.medium-12.large-12
    %h1.mb0
      Edit fund :
      = @fund.name
%hr
.grid-x.grid-padding-x
  .cell.medium-12.large-12
    = simple_form_for @fund do |f|
      = render partial: "funds/shared/form", locals: {f: f}
