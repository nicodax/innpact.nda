= render partial: "settings/shared/breadcrumb", locals: {intermediate_topics: {"Institution Groups" => fund_settings_institution_groups_path}, current_topic: setting.name}
= render partial: "settings/institution_groups/shared/header"
%hr
  .grid-x.grid-padding-x

    = render partial: "settings/institution_groups/shared/index"
    .cell.small-12.medium-8
      %h2= setting.name
      %ul.ml0
        %li
          %strong Name
          = setting.name
        %li
          %strong Created by
          = setting.created_by
      .grid-x
        .cell.small-6.medium-4.large-2
          = link_to "Delete", "#", class: "cta cta_warning", id: "delete-setting"
        .cell.small-6.medium-4.large-2
          = link_to "Edit", edit_fund_settings_institution_group_path(id: setting.id), class: "cta ml5 mb5"

= render partial: "settings/shared/delete", locals: {setting: setting, setting_name: resource_name}
