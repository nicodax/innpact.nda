= render partial: "settings/shared/breadcrumb", locals: {intermediate_topics: {}, current_topic: t("settings.currencies.breadcrumb_currencies")}
= render partial: "settings/currencies/shared/header"
%hr
  .grid-x.grid-padding-x
    .cell.small-12.medium-6.large-6.section_3
      .mb20
        %a.cta{href: new_fund_settings_currency_path}= t("settings.shared.create")
        %a.cta{href: upload_fund_settings_currencies_path}= t(".update_currency_rates")
      = render partial: "settings/currencies/shared/index"
    .cell.small-12.medium-6.large-6
      %h2= t("settings.shared.create").upcase
      = simple_form_for new_setting, url: fund_settings_currencies_path do |f|
        = render 'shared/form_error_messages', object: f.object
        = render partial: "settings/currencies/shared/form", locals: {f: f}
