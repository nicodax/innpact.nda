= render partial: "settings/shared/breadcrumb", locals: {intermediate_topics: {t("settings.currencies.breadcrumb_currencies")=> fund_settings_currencies_path}, current_topic: t("settings.currencies.breadcrumb_update_all_currencies")}
= render partial: "settings/currencies/shared/header"
%hr
  .grid-x.grid-padding-x
    .cell.small-12.medium-6.large-6
      %h2= t(".load_currency_file").upcase
      = simple_form_for new_setting, url: import_fund_settings_currencies_path, multipart: true do |f|
        %span.cta.btn_load_currency_file.mb10
          = t('.import')
          = f.file_field :file, required: true, class: "btn_import_currency"
        = f.submit'', class: "cta_submit_currency"

=javascript_pack_tag 'currencies'
 