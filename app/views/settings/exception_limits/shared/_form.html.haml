.grid-x.grid-margin-x
  .cell.small-12.medium-6
    = f.input :model, as: :select, collection: [[t(".institutions"),"institution"],[t(".institution_groups"),"institution_group"],[t(".countries"),"country"]]
  .cell.small-12.medium-6.hide#institution-select
    = f.input :model_id, as: :select, collection: fund.institutions.all, value_method: :id, label: "Institution", input_html: {id: "institution_id_select"}
  .cell.small-12.medium-6.hide#country-select
    = f.input :model_id, as: :select, collection: fund.countries.all.order(:name), value_method: :id, label: "Country", input_html: {id: "country_id_select"}
  .cell.small-12.medium-6.hide#institution_group-select
    = f.input :model_id, as: :select, collection: fund.institution_groups.all, value_method: :id, label: "Group", input_html: {id: "institution_group_id_select"}
  .cell.small-12.medium-6.hide#form-value
    = f.input :value, as: "string", input_html: { class: "thousand_currencies_formats" }
  .cell.small-12.medium-6.hide#form-value
    = f.input :description

  = f.input :model_id, as: :hidden
  .cell.small-12#form-buttons.hide
    %a.cta.cta_grey#reset-form Cancel
    = f.submit "Save", class: "cta ml5"

= javascript_pack_tag 'exception_limits'
= javascript_pack_tag 'cleave_form_format'
