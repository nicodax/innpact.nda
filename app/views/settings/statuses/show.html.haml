= render partial: "settings/shared/breadcrumb", locals: {intermediate_topics: {"Statuses" => fund_settings_statuses_path}, current_topic: setting.name}
= render partial: "settings/statuses/shared/header"
%hr
  .grid-x.grid-padding-x

    = render partial: "settings/statuses/shared/index"
    .cell.small-12.medium-8
      %h2= setting.name
      %ul.ml0
        %li
          %strong= t('.name')
          = setting.name
        %li
          %strong= t('.description')
          = setting.description
      .grid-x
        .cell.small-6.medium-4.large-2
          = link_to "Delete", "#", class: "cta cta_warning", id: "delete-setting"
        .cell.small-6.medium-4.large-2
          = link_to "Edit", edit_fund_settings_status_path(id: setting.id), class: "cta ml5 mb5"

= render partial: "settings/shared/delete", locals: {setting: setting, setting_name: resource_name}
