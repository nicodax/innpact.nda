
= render partial: "settings/shared/breadcrumb", locals: {intermediate_topics: {t("settings.countries.countries") => fund_settings_countries_path}, current_topic: setting.name}
= render partial: "settings/countries/shared/header"
%hr
  .grid-x.grid-padding-x

    = render partial: "settings/countries/shared/index"
    .cell.small-12.medium-4
      %h2= setting.name
      %ul.ml0
        %li
          %strong= t(".isocode")
          = setting.iso_code
        %li
          %strong= t(".population")
          = number_with_delimiter(setting.population)
        %li
          %strong= t(".rating")
          = setting.rating
        %li
          %strong= t(".gdp")
          = number_with_precision(setting.gdp, :precision => 2,separator: '.', delimiter: ',')
        %li
          %strong= t(".gdp_per_capita")
          = number_with_precision(setting.gdp_per_capita, :precision => 2,separator: '.', delimiter: ',')
        %li
          %strong= t(".gni")
          = number_with_precision(setting.gni, :precision => 2,separator: '.', delimiter: ',')
        %li
          %strong= t(".gni_per_capita")
          = number_with_precision(setting.gni_per_capita, :precision => 2,separator: '.', delimiter: ',')
        %li
          %strong= t(".mimosa_score")
          = setting.mimosa_score
        %li
          %strong= t(".is_a_high_income_country")
          = setting.is_a_high_income_country
        %li
          %strong= t(".country_group")
          = "#{setting&.country_group&.name}"
        %li
          %strong= t(".limit")
          = number_to_currency(setting.limit, unit: "$", format: "%n %u")
        %li
          %strong= t(".created_by")
          = setting.created_by
      .grid-x
        .cell.small-6.medium-4.large-4
          = link_to t("settings.shared.delete"), "#", class: "cta cta_warning", id: "delete-setting"
        .cell.small-6.medium-4.large-4
          = link_to t("settings.shared.edit"), edit_fund_settings_country_path(id: setting.id), class: "cta ml5 mb5"

= render partial: "settings/shared/delete", locals: {setting: setting, setting_name: resource_name}
