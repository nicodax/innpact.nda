.cell.small-12.align-self-middle
  %a.app-dashboard-logo.logo_login{href: '/users/sign_in'}
    %img{:alt => "Logo innpact", :src => image_url("logo.png")}/
  %h2
    %b Forgot your password ?
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    = f.error_notification
    .form-inputs
      = f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }
    .form-actions
      = f.button :submit, "Send me reset password instructions"
.lost_password.cell.small-12.grid-x.grid-padding-x.align-self-stretch.mt20
  -# = link_to "Login", new_password_path(resource_name), class: "align-self-bottom text-center"
  = link_to "Login", '/users/sign_in', class: "align-self-bottom text-center"
