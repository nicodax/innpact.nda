- content_for :breadcrumbs do
  %nav{"aria-label" => t("breadcrumbs.you_are_here"), :role => "navigation"}
    %ul.breadcrumbs
      %li
        %a{:href => root_path} Welcome
      %li
        %a{:href => root_path} Funds
      %li
        %a{:href => fund_path(id: fund.id)}= fund.name
      %li
        %span.show-for-sr t("current")
        = t(".new_usd_amount")
.grid-x
  .cell.medium-6
    %h1.mb0= t(".create_new_usd_amount")
%hr
= simple_form_for ([fund, fund_usd_amount]) do |f|
  = render partial: "fund_usd_amounts/shared/form", locals: {f: f}
